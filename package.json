{
	"name": "voice-memo",
	"description": "A service consisting of a Javascript (React) frontend and Node backend for quickly and easily recording, storing, removing, and sharing short audio recordings made natively in the browser.",
	"author": {
		"name": "54ac",
		"email": "me@54ac.bio",
		"url": "https://github.com/54ac"
	},
	"repository": "github:54ac/voice-memo",
	"version": "0.2.1",
	"private": true,
	"dependencies": {
		"@material-ui/core": "^4.11.0",
		"@material-ui/icons": "^4.9.1",
		"clipboard-copy": "^4.0.1",
		"cookie-parser": "^1.4.5",
		"express": "^4.17.1",
		"helmet": "^7.0.0",
		"lowdb": "^1.0.0",
		"moment": "^2.27.0",
		"multer": "^1.4.5-lts.1",
		"react": "^17.0.0",
		"react-dom": "^17.0.0",
		"react-scripts": "^4.0.0",
		"uuid": "^9.0.0"
	},
	"scripts": {
		"start": "concurrently \"npm run client\" \"npm run server\"",
		"client": "set PORT=5441 && react-scripts --openssl-legacy-provider start",
		"server": "nodemon server\\server.js",
		"build": "react-scripts --openssl-legacy-provider build",
		"prod": "concurrently \"serve -l 5441 build\" \"pm2 start server\\server.js\"",
		"eject": "react-scripts eject"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.18.13",
		"@babel/eslint-parser": "^7.18.9",
		"@babel/preset-react": "^7.18.6",
		"concurrently": "^8.0.1",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.20.3",
		"eslint-plugin-react-hooks": "^4.0.8",
		"http-proxy-middleware": "^2.0.0",
		"prettier": "^2.0.5",
		"stylelint": "^15.0.0",
		"stylelint-config-recommended": "^12.0.0",
		"stylelint-config-standard": "^33.0.0"
	},
	"nodemonConfig": {
		"ignore": [
			"src/*",
			"package.json",
			"server/voice-memo.json"
		]
	}
}
